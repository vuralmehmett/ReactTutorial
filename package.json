{
  "name": "ders1",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "enzyme-adapter-react-16": "^1.1.1",
    "jest-cli": "^20.0.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint \"**/*.css\"",
    "lint": "yarn run lint:eslint && yarn run lint:stylelint",
    "format":
      "prettier --print-width=100 --single-quote --trailing-comma all --write \"{src, __tests__}/**/*.js\"",
    "lint-staged": "lint-staged",
    "test": "react-scripts test --env=jsdom",
    "coverage":
      "yarn run test -- --coverage --collectCoverageFrom=src/**/*.js --collectCoverageFrom=!src/index.js --collectCoverageFrom=!src/registerServiceWorker.js",
    "postcoverage":
      "istanbul check-coverage --statements 90 --functions 90 --branches 90 --lines 90",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.js": ["yarn run format", "git add"]
  },
  "pre-commit": "lint-staged",
  "jest": {
    "snapshotSerializers": ["<rootDir>/node_modules/enzyme-to-json/serializer"]
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "istanbul": "^0.4.5",
    "lint-staged": "^6.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0"
  }
}
